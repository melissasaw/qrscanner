<div class= "container">

  <div class="form-group">
    <label for="first_name">First Name*</label>
    <%= form.text_field :first_name, class: 'form-control', placeholder: 'Enter First Name' %>
  </div>

  <div class="form-group">
    <label for="last_name" >Last Name*</label>
    <%= form.text_field :last_name, class: 'form-control', placeholder: 'Enter Last Name' %>
  </div>

  <div class="form-group">
    <label for="position">Position</label>
    <%= form.text_field :position, class: 'form-control', placeholder: 'Position/Role' %>
    <small>
      Future improvements : Only verified and assigned by super admin.
    </small>
  </div>

  <div class="form-group">
    <label for="email">Email*</label>
    <%= form.text_field :email, class: 'form-control', placeholder: 'Email' %>
  </div>

  <div class="form-group">
    <label for="password">Password*</label>
    <%= form.password_field :password, class: 'form-control', placeholder: 'Enter Password' %>
    <small>
      Minimum 6 chars.
    </small>
  </div>
  
</div>
